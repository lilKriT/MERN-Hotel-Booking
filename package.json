{
  "name": "MERN Hotel Booking",
  "packageManager": "yarn@3.5.1",
  "scripts": {
    "client": "cd packages/client && yarn dev",
    "server": "cd packages/server && yarn dev",
    "both": "concurrently \"yarn server\" \"yarn client\""
  },
  "workspaces": [
    "packages/client",
    "packages/server"
  ],
  "dependencies": {
    "concurrently": "^8.0.1"
  }
}
